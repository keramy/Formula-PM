# Development Environment Configuration
# This file is used in development mode to configure the app

# Force demo mode - set to 'true' to always use demo data instead of API calls
# This is useful when developing without a backend or when the backend is having issues
VITE_FORCE_DEMO_MODE=false

# API URL - leave empty in development to use Vite proxy
VITE_API_URL=

# App Configuration
VITE_APP_NAME=Formula PM
VITE_APP_VERSION=1.0.0

# Development flags
VITE_ENABLE_DEBUG_LOGS=true
VITE_SHOW_PERFORMANCE_METRICS=true